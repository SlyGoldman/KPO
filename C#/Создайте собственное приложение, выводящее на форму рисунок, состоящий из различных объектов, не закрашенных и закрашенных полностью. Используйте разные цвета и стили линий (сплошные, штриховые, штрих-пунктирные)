using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Drawing.Drawing2D;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WindowsFormsApp1
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void pictureBox1_Click(object sender, EventArgs e)
        {

        }
        private void pictureBox1_Paint(object sender, PaintEventArgs e)
        {
            this.pictureBox1.Paint += new System.Windows.Forms.PaintEventHandler(this.pictureBox1_Paint);

            Graphics g = e.Graphics;

            Pen solidPen = new Pen(Color.Blue, 2);
            Pen dashPen = new Pen(Color.Green, 2) { DashStyle = DashStyle.Dash };
            Pen dotDashPen = new Pen(Color.Red, 2) { DashStyle = DashStyle.DashDot };

            SolidBrush brush = new SolidBrush(Color.Red);

            g.DrawLine(solidPen, 10, 10, 100, 100);
            g.DrawLine(dashPen, 10, 130, 100, 220);
            g.DrawLine(dotDashPen, 10, 250, 100, 340);

            g.DrawRectangle(solidPen, 120, 10, 80, 40);
            g.FillRectangle(brush, 220, 10, 80, 40);

            g.DrawEllipse(dashPen, 10, 120, 80, 40);
            g.FillEllipse(brush, 120, 120, 80, 40);

            Point[] points = { new Point(50, 200), new Point(100, 250), new Point(150, 200) };
            g.DrawPolygon(dotDashPen, points);
            g.FillPolygon(brush, points);

            solidPen.Dispose();
            dashPen.Dispose();
            dotDashPen.Dispose();
            brush.Dispose();
        }
    }
}
