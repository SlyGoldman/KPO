    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {

        }

        protected override void OnClick(EventArgs e)
        {
            base.OnClick(e);
            this.BackColor = System.Drawing.Color.LightBlue;
            label1.Text = "Начало работы";
            textBox1.Clear();
        }


