using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WindowsFormsApp2
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void dataGridView1_CellContentClick(object sender, DataGridViewCellEventArgs e)
        {

        }

        private void button1_Click(object sender, EventArgs e)
        {
            dataGridView1.RowCount = 15;
            dataGridView1.ColumnCount = 15;
            int[,] F = new int[15, 15];
            int i, j;
            Random rand = new Random();
            for (i = 0; i < 15; i++)
                for (j = 0; j < 15; j++)
                    F[i, j] = rand.Next(-100, 100);
            for (i = 0; i < 15; i++)
                for (j = 0; j < 15; j++)
                    dataGridView1.Rows[i].Cells[j].Value = F[i, j].ToString();

            bool stroka = false;
            for (i = 0; i < 15; i++)
            {
                if (F[i, 0] == 1)
                {
                    stroka = true;
                    double sum = 0;
                    for (j = 0; j < 15; j++)
                    {
                        sum += F[i, j];
                    }
                    double srednee = sum / F.GetLength(1);
                    textBox1.Text = ("Номер строки = " + (i+1).ToString() + ". Среднее арифметическое этой строки = " + srednee);
                    break;
                }
            }

            if (!stroka)
            {
                textBox1.Text = ("Строки нет");
            }
        }
      
    }
}
