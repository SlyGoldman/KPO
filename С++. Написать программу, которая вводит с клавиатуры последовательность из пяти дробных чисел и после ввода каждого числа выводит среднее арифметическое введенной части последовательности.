#include <iostream>

using namespace std;

int main() {
    const int drob_posl = 5;
    double sum = 0;

    cout << "Введите " << drob_posl << " дробных чисел:\n";

    for (int i = 1; i <= drob_posl; ++i) {
        double chislo;
        cout << "Введите число " << i << ": ";
        cin >> chislo;
        sum += chislo;
        double srednee = sum / i;
        cout << "Среднее арифметическое для первых " << i << " чисел: " << srednee << endl;
    }

    return 0;
}
