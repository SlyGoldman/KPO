#include <iostream>
using namespace std;

int main() 
{
    int a, b, c, d;
    cout << "Введите четыре целых числа через пробел: ";
    cin >> a >> b >> c >> d;

    int max_number = a;
    if (b > max_number) {
        max_number = b;
    }
    if (c > max_number) {
        max_number = c;
    }
    if (d > max_number) {
        max_number = d;
    }

    cout << "Наибольшее число: " << max_number << endl;

    return 0;
}
