#include <iostream>

using namespace std;

int main() {

    double celsii_nachalo, celsii_konec, shag;
    cout << "Введите начальную температуру в градусах Цельсия: ";
    cin >> celsii_nachalo;
    cout << "Введите конечную температуру в градусах Цельсия: ";
    cin >> celsii_konec;
    cout << "Введите шаг изменения температуры в градусах Цельсия: ";
    cin >> shag;

    cout << "Температура в градусах Цельсия и Температура в градусах Фаренгейта" << endl;

    for (double celsii = celsii_nachalo; celsii <= celsii_konec; celsii += shag) {
        double farengeit = (5.0 / 9.0) * celsii + 32.0;
        cout << celsii << "°C и " << farengeit << "°F" << endl;
    }

    return 0;
}
