#include <iostream>
#include <algorithm>
using namespace std;

int dvoichii_poisk(int arr[], int razmer, int cel) {
    int sleva = 0;
    int sprava = razmer - 1;

    while (sleva <= sprava) {
        int seredina = sleva + (sprava - sleva) / 2;
        if (arr[seredina] == cel) {
            return seredina;
        } else if (arr[seredina] > cel) {
            sleva = seredina + 1;  
        } else {
            sprava = seredina - 1;  
        }
    }
    return -1; 
}

int main() {
    const int razmer = 10;
    int arr[razmer];
    int x;


    cout << "Введите " << razmer << " целых чисел:" << endl;
    for (int i = 0; i < razmer; i++) {
        cin >> arr[i];
    }

    sort(arr, arr + razmer, greater<int>());


    cout << "Введите число для поиска: ";
    cin >> x;


    int result = dvoichii_poisk(arr, razmer, x);
    if (result != -1) {
        cout << "Число найдено на позиции " << result << " в отсортированном массиве." << endl;
    } else {
        cout << "Число не найдено в отсортированном массиве." << endl;
    }

    return 0;
}
