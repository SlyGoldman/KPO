#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    const int razmer = 10;
    int arr[razmer];


    srand(time(0));
    for (int i = 0; i < razmer; i++) {
        arr[i] = rand() % 21 - 10;
    }


    cout << "Начальный массив: ";
    for (int i = 0; i < razmer; i++) {
    cout << arr[i] << " ";
    }
    cout << endl;


    int temp = arr[razmer - 1];
    for (int i = razmer - 1; i > 0; i--) {
        arr[i] = arr[i - 1];
    }
    arr[0] = temp;


    cout << "Массив после циклического сдвига вправо: ";
    for (int i = 0; i < razmer; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
