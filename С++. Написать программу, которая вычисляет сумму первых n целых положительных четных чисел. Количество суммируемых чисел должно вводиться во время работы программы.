#include <iostream>

using namespace std;

int main() {
    int n;
    int sum = 0;


    cout << "Введите количество суммируемых чисел: ";
    cin >> n;

    for (int i = 1; i <= n; ++i) {
        int chetnost = 2 * i;
        sum += chetnost;
    }

    cout << "Сумма первых " << n << " четных чисел: " << sum << endl;

    return 0;
}

