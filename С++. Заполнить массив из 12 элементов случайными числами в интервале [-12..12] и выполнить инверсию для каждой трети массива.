#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    const int razmer = 12;
    int arr[razmer];

    srand(time(0));
    for (int i = 0; i < razmer; i++) {
        arr[i] = rand() % 25 - 12;
    }

    cout << "Нчальный массив: ";
    for (int i = 0; i < razmer; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    for (int i = 0; i < razmer; i += razmer / 3) {
        int start = i;
        int end = i + razmer / 3 - 1;
        while (start < end) {
            int temp = arr[start];
            arr[start] = arr[end];
            arr[end] = temp;
            start++;
            end--;
        }
    }

    cout << "Массив после инверсии для каждой трети: ";
    for (int i = 0; i < razmer; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
