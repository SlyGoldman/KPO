#include <iostream>

int main() 

{
    double S1, S2, t1, t2, srednya;

    std::cout << "Введите расстояние между пунктами А и Б (S1): ";
    std::cin >> S1;

    std::cout << "Введите расстояние между пунктами Б и В (S2): ";
    std::cin >> S2;

    std::cout << "Введите время движения между пунктами А и Б (t1): ";
    std::cin >> t1;

    std::cout << "Введите время движения между пунктами Б и В (t2): ";
    std::cin >> t2;

    srednya = (S1 + S2) / (t1 + t2);

    std::cout << "Средняя скорость движения мотоциклиста: " << srednya << " единиц времени/единицу расстояния" << std::endl;

    return 0;
}
