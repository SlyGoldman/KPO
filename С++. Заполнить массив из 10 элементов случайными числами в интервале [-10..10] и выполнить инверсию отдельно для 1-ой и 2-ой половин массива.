#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    const int razmer = 10;
    int arr[razmer];


    srand(time(0));
    for (int i = 0; i < razmer; i++) {
        arr[i] = rand() % 21 - 10;
    }

    cout << "Нчальный массив: ";
    for (int i = 0; i < razmer; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    for (int i = 0; i < razmer / 2; i++) {
        int temp = arr[i];
        arr[i] = arr[razmer/2 + i];
        arr[razmer/2 + i] = temp;
    }

    cout << "Массив после инверсии 1-ой половины: ";
    for (int i = 0; i < razmer; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    for (int i = 0; i < razmer / 2; i++) {
        int temp = arr[i];
        arr[i] = arr[razmer/2 + i];
        arr[razmer/2 + i] = temp;
    }

    cout << "Массив после инверсии 2-ой половины: ";
    for (int i = 0; i < razmer; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
