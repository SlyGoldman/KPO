include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main() {
const int razmer = 12;
int array[razmer];

srand(time(0));
for(int i = 0; i < razmer; ++i) {
    array[i] = rand() % 25 - 12;
}

cout << "Начальный массив: ";
for(int i = 0; i < razmer; ++i) {
cout << array[i] << " ";
}


for(int i = 0; i < 4; ++i) {
    int temp = array[razmer - 1];
    for(int j = razmer - 1; j > 0; --j) {
        array[j] = array[j - 1];
    }
    array[0] = temp;
}


cout << "\nМассив после циклического сдвига вправо на 4 элемента: ";
for(int i = 0; i < razmer; ++i) {
cout << array[i] << " ";
}

return 0;
}
